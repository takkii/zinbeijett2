#!/usr/bin/env ruby
# frozen_string_literal: true

# vim: filetype=ruby

require 'kconv'

Encoding.default_internal = 'UTF-8'

puts ''

module All
  module_function

  def search
    one = ARGV[1].toutf8

    open(one) do |f|
      while (str2 = f.gets)
        str = str2.chomp!
        twice = ARGV[2].toutf8
        three_act = /#{twice}/o

        begin
          if str.match(three_act) || {}[:match]
            printf('%2d : %s', f.lineno, str)
            puts ''
          end
        rescue Timeout::Error, StandardException => e
          puts e.backTrace
          exit!
        end
      end

      if f.eof?
        puts ''
      elsif !f.eof
      begin
        raise All
      rescue StandardException => ee
        puts ee.backtrace
        puts ee.backtrace_locations
      end
      end
    end
  end
end

one = ARGV[0]
z = /\A[-][z]\z/

if one.nil?
  puts 'engine2 is Zinbeijett2, I made in 2018.'.toutf8
elsif one.match?(z)
  All.search
else
  puts 'Not other arguments!'.toutf8
end

puts ''

GC.start

__END__
